@model ExtraFormModel

@{
    ViewData["Title"] = "Edit Extra";
}

<h2 class="text-center">@ViewData["Title"]</h2>
<hr />

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form method="post">
            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" placeholder="ABS, Navigation, Service History ... " />
                <span asp-validation-for="Name" class="small text-danger"></span>

                <label asp-for="ExtraTypeId"></label>
                <select asp-for="ExtraTypeId" class="form-control">
                    @foreach (var extraType in Model.ExtraTypes)
                    {
                        <option value="@extraType.TypeId">@extraType.TypeName</option>
                    }
                </select>
                <span asp-validation-for="ExtraTypeId" class="small textdanger"></span>
            </div>
            <div class="text-center">
                <input class="btn btn-primary mt-3" type="submit" value="Save" />
            </div>
        </form>
    </div>
</div>
